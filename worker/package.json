{
  "name": "streaky-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker backend for Streaky productivity app",
  "main": "index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js",
    "build": "echo 'No build step required for Cloudflare Workers'",
    "kv:create": "wrangler kv:namespace create STREAKY_KV",
    "kv:create:preview": "wrangler kv:namespace create STREAKY_KV --preview",
    "tail": "wrangler tail",
    "tail:staging": "wrangler tail --env staging",
    "tail:production": "wrangler tail --env production"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "serverless",
    "api",
    "productivity",
    "tasks",
    "streaks"
  ],
  "author": "Streaky App Team",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240129.0",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.2",
    "prettier": "^3.2.4",
    "wrangler": "^3.25.0"
  },
  "eslintConfig": {
    "env": {
      "es2022": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    },
    "globals": {
      "Request": "readonly",
      "Response": "readonly",
      "Headers": "readonly",
      "URL": "readonly",
      "URLSearchParams": "readonly",
      "crypto": "readonly",
      "addEventListener": "readonly",
      "fetch": "readonly"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "jest": {
    "testEnvironment": "miniflare",
    "testEnvironmentOptions": {
      "modules": true,
      "scriptPath": "index.js"
    },
    "collectCoverageFrom": [
      "*.js",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}